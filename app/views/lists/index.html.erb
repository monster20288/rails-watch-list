  <div class="container">
    <div class="row">
      <h1> My Lists</h1>
      <% @lists.each do |list| %>
      <div class="col-md-3">
        <% if list.photo.attached?%>
          <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
        <% else %>
          <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/5662857/pexels-photo-5662857.png)">
        <% end %>

              <%= list.name %>
          </div>
        <h2><%= link_to "View", list_path(list), class: "btn btn-primary my-2" %></h2>
      </div>
      <% end %>
    </div>
  </div>
  <div class="container mt-5">
      <div class="row ">
        <div class="col-md-12 mt-2 ">
          <article class="mt-3 d-flex justify-content-between">
            <h1> Movie List </h1>
          </article>
          <div class="row">
            <% @movies.each do |movie| %>
            <div class="col-md-3">
              <div class="card mb-3">
                <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                  <h5 class="card-title"><b><%= movie.title %></b></h5>
                  <p class="card-text"><small><%= movie.overview %></small></p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
