
<% if @list.photo.attached?%>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
<% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/5662857/pexels-photo-5662857.png)">
<% end %>
</div>
    <div class="container">
      <div class="row ">
        <div class="col-md-12 mt-2 ">
          <article class="mt-3 d-flex justify-content-between">
            <h1><%= @list.name %></h1>
            <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-secondary my-2" %>
          </article>
          <div class="row">
            <% @list.bookmarks.each do |bookmark| %>
            <div class="col-md-3">
              <div class="card mb-3">
                <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
                <div class="card-body">
                  <h5 class="card-title"><b><%= bookmark.movie.title %></b></h5>
                  <p class="card-text"><small><%= bookmark.comment %></small></p>
                  <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-primary my-2" , data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title}?" }%>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
